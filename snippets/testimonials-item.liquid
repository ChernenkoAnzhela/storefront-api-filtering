
{% if block.settings.star != 'none' or block.settings.custom_img != blank or block.settings.link_label != blank or block.settings.title != blank or block.settings.text != blank or block.settings.author != blank %}
    <div class="testimonials-info color-{{ block.settings.color_scheme }}">
        {%- if block.settings.image != blank -%}
            <div class="testimonials-image">

                {% if section.settings.image_ratio == 'adapt' %}
                    style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                {% endif %}
                {%- capture sizes -%}(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %}, (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %}, calc(100vw - 30px){%- endcapture -%}
                {{ block.settings.image | image_url: width: 1420 | image_tag:
                loading: 'lazy',
                sizes: sizes,
                widths: '275, 550, 710, 1420',
                class: 'testimonials-item-image'
                }}

            </div>
        {%- endif -%}
        {% if block.settings.star != 'none' %}
            <div class="testimonials-stars" style="color: {{ block.settings.starColor }};">
                {% for i in (1..5) %}
                    <span class="testimonials-star-item">
										{% assign star_setting = block.settings.star | abs %}

                        {% if i <= star_setting %}
                            <svg class="active" width="26" height="24" viewBox="0 0 26 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12.0489 0.927052C12.3483 0.00574109 13.6517 0.00573986 13.9511 0.92705L16.1432 7.67376C16.2771 8.08578 16.661 8.36475 17.0943 8.36475H24.1882C25.1569 8.36475 25.5597 9.60436 24.776 10.1738L19.0369 14.3435C18.6864 14.5981 18.5397 15.0495 18.6736 15.4615L20.8657 22.2082C21.1651 23.1295 20.1106 23.8956 19.3269 23.3262L13.5878 19.1565C13.2373 18.9019 12.7627 18.9019 12.4122 19.1565L6.67312 23.3262C5.88941 23.8956 4.83493 23.1295 5.13428 22.2082L7.32642 15.4615C7.46029 15.0495 7.31363 14.5981 6.96315 14.3435L1.22405 10.1738C0.440337 9.60436 0.843112 8.36475 1.81184 8.36475H8.90575C9.33897 8.36475 9.72293 8.08578 9.8568 7.67376L12.0489 0.927052Z" fill="currentColor"/>
                            </svg>
                        {% else %}
                            <svg width="26" height="24" viewBox="0 0 26 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M13.4755 1.08156L15.6677 7.82827C15.8685 8.4463 16.4444 8.86475 17.0943 8.86475H24.1882C24.6725 8.86475 24.8739 9.48455 24.4821 9.76925L18.743 13.9389C18.2172 14.3209 17.9972 14.998 18.1981 15.616L20.3902 22.3627C20.5399 22.8234 20.0126 23.2064 19.6208 22.9217L13.8817 18.752C13.3559 18.3701 12.6441 18.3701 12.1183 18.752L6.37923 22.9217C5.98737 23.2064 5.46013 22.8234 5.60981 22.3627L7.80194 15.616C8.00276 14.998 7.78277 14.3209 7.25704 13.939L1.51794 9.76925C1.12609 9.48455 1.32747 8.86475 1.81184 8.86475H8.90575C9.55559 8.86475 10.1315 8.44631 10.3323 7.82827L12.5245 1.08156C12.6741 0.620903 13.3259 0.620905 13.4755 1.08156Z" stroke="currentColor"/>
                                </svg>

                        {% endif %}
									</span>
                {% endfor %}
            </div>
        {% endif %}
        <div class="testimonials-item-text-info">

            {%- if block.settings.title != blank -%}
                <h4>{{ block.settings.title }}</h4>
            {%- endif -%}

            {%- if block.settings.text != blank -%}
                <div class="testimonials-rte">{{ block.settings.text }}</div>
            {%- endif -%}
        </div>
        {% if block.settings.author != blank %}
            <div class="testimonials-author-name">
                <strong>
                     {{ block.settings.author }}
                </strong>

            </div>
        {% endif %}
        {%- if block.settings.link_label != blank -%}
            <div class="testimonials-card-footer">
                <a class="link" href="{{ block.settings.link }}">
                    {% if block.settings.custom_img != blank %}
                        <div class="testimonials-additional-info">
                            {% if block.settings.custom_img != blank %}
                                <div class="testimonials-additional-info-image">
                                    {%- capture sizes -%}(min-width: 990px) 250px, (min-width: 320px) 100px {%- endcapture -%}
                                    {{ block.settings.custom_img | image_url: width: 250 | image_tag:
                                    loading: 'lazy',
                                    sizes: sizes,
                                    widths: '320, 990',
                                    class: 'testimonials-additional-image'
                                    }}
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                    <span>
                        {{ block.settings.link_label }}
                    </span>
                    <svg width="23" height="16" viewBox="0 0 23 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M22.7071 8.70711C23.0976 8.31658 23.0976 7.68342 22.7071 7.29289L16.3431 0.928932C15.9526 0.538408 15.3195 0.538408 14.9289 0.928932C14.5384 1.31946 14.5384 1.95262 14.9289 2.34315L20.5858 8L14.9289 13.6569C14.5384 14.0474 14.5384 14.6805 14.9289 15.0711C15.3195 15.4616 15.9526 15.4616 16.3431 15.0711L22.7071 8.70711ZM0 9H22V7H0V9Z" fill="white"/>
                    </svg>

                </a>
            </div>
        {%- endif -%}



    </div>
{% endif %}